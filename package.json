{
  "name": "laravel-echo-ionic",
  "version": "1.0.2",
  "description": "Laravel Echo library for beautiful Pusher and Socket.IO integration",
  "main": "dist/echo.js",
  "scripts": {
    "compile": "./node_modules/.bin/rollup -c",
    "prepublish": "npm run compile",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThunderBirdsX3/echo"
  },
  "keywords": [
    "ionic",
    "laravel",
    "pusher",
    "socket.io"
  ],
  "author": [
    {
      "name": "Taylor Otwell"
    },
    {
      "name": "Supasin Dum-umpai"
    }
  ],
  "homepage": "https://github.com/ThunderBirdsX3/echo",
  "engines": {
    "node": ">6.0.*"
  },
  "dependencies": {
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "@types/node": "^6.0.85",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-2": "^6.5.0",
    "jest": "^22.1.0",
    "pusher-js": "^3.2.1",
    "rollup": "^0.31.0",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-typescript": "^0.7.5",
    "ts-jest": "^22.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
